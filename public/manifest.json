  "scope": "/",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#1e293b",
  "background_color": "#0f172a",
  "lang": "en-US",
  "dir": "ltr",
  "categories": ["education", "productivity", "business"],
