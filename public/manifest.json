  "shortcuts": [
    {
      "name": "My Courses",
      "short_name": "Courses",
      "description": "View and continue your enrolled courses",
      "url": "/courses",
      "icons": [
        {
          "src": "/icons/courses-shortcut.png",
          "sizes": "192x192",
          "type": "image/png",
          "purpose": "any"
        }
      ]
    },
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "View your learning progress and statistics",
      "url": "/dashboard",
      "icons": [
        {
          "src": "/icons/dashboard-shortcut.png",
          "sizes": "192x192",
          "type": "image/png",
          "purpose": "any"
        }
      ]
    },
    {
      "name": "Community",
      "short_name": "Community",
      "description": "Connect with other learners and mentors",
      "url": "/community",
      "icons": [
        {
          "src": "/icons/community-shortcut.png",
          "sizes": "192x192",
          "type": "image/png",
          "purpose": "any"
        }
      ]
    }
  ],
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://cloudcrewacademy.com/manifest.json"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_includes": {
    "supported": true
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "file_handlers": [
    {
      "action": "/open-file",
      "accept": {
        "application/pdf": [".pdf"],
        "text/plain": [".txt", ".md"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+cloudcrew",
      "url": "/handle-protocol?url=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "application/pdf", "text/*"]
        }
      ]
    }
  }
}